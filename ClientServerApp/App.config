<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="akka" type="Akka.Configuration.Hocon.AkkaConfigurationSection, Akka" />
  </configSections>
  <akka>
    <hocon>
      <![CDATA[ 
        akka {
          actor {
            provider = remote
          }

          remote {
            dot-netty.tcp {
  	          port = 8081
  	          hostname = 0.0.0.0
              public-hostname = localhost
            }
          }
        }      
      
      ]]>
    </hocon>
  </akka>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.1" />
  </startup>
</configuration>